<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--    1.导入spring的坐标spring-content，对应版本是5.2.10.RELEASE-->

    <!--    2.配置bean-->
    <!--    bean标签表示配置bean-->
    <!--    class属性表示bean的类型-->
    <!--    id属性表示bean的id，这个id是唯一的，不能重复-->
    <bean id="bookDao" class="com.xys.dao.impl.BookDaoImpl"/>

    <bean id="bookService" class="com.xys.service.impl.BookServiceImpl">
        <!--    7.配置Service 与 dao的关系-->
        <!--        property 标签表示配置当前bean的属性-->
        <!--        name 属性表示配置哪一个具体的属性-->
        <!--        ref 表示参照哪一个 bean-->
<!--        <property name="bookDao" ref="bookDao"/>-->
    </bean>

</beans>